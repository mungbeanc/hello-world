<style>
    #mov{
        position: relative;
        width:470px;
        height:341px;
        overflow: hidden;
        margin: 0 auto;
    }
    #imgCon{
        width:1882px;
        height:341px;
        font-size: 0;
        position: absolute;
    }
    #imgCon img{float: left;}
    #imgCon img:nth-child(1) {
        width:469px;
        height:341px;
    }
    #imgCon img:nth-child(2) {
        width:472px;
        height:341px;
    }
    #imgCon img:nth-child(3) {
        width:469px;
        height:341px;
    }
    #imgCon img:nth-child(4) {
        width:472px;
        height:341px;
    }
    #listImg {
        position: absolute;
        left: 195px;
        bottom:10px;
    }
    #listImg li{
        display: block;
        width:10px;
        height: 10px;
        list-style:none;
        border:1px solid red;
        border-radius: 50%;
        float: left;
    }
    .icon-arrow-lift{
        position: absolute;
