<body>
    <div id="mov">
    <div id="imgCon">
        <img src="images/peo_03.jpg" alt="">
        <img src="images/peo_05.jpg" alt="">
        <img src="images/peo_09.jpg" alt="">
        <img src="images/peo_10.jpg" alt="">
    </div>
     <ul id="listImg">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
    </ul>
    <div>
        <span class="iconfont icon-arrow-lift"></span>
        <span class="iconfont icon-arrow-right"></span>
    </div>
    </div>
<script>
    var position=0,
        preLi,
        leftBtn=document.getElementsByClassName("icon-arrow-lift")[0],
        rightBtn=document.getElementsByClassName("icon-arrow-right")[0],
        imgCon=document.getElementById("imgCon"),
        listImg=Array.from(document.getElementsByTagName("li"));
    leftBtn.addEventListener("click",clickHandler);
    rightBtn.addEventListener("click",clickHandler);
    for(var i=0;i<listImg.length;i++){
        listImg[i].addEventListener("click",liClickHandler);
    }
   
    imgMove();
    function clickHandler(e) {
         if(this===leftBtn){
             position--;
             if(position<0){
                 position=3;
             }
             imgMove();
             return;
         }
         position++;
         if(position>3){
             position=0;
         }
         imgMove();
    }
    function imgMove(){
        imgCon.style.left=-470*position+"px";
        if(preLi){
            preLi.style.backgroundColor="rgba(255,0,0,0)";
        }
        preLi=listImg[position];
        preLi.style.backgroundColor="rgba(255,0,0,0.5)";
    }
    function liClickHandler(e){
         position=listImg.indexOf(this);
         imgMove();
    }
</script>
</body>

